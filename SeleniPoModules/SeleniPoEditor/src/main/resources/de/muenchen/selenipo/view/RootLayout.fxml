<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.muenchen.selenipo.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="menuItemSave" mnemonicParsing="false" onAction="#handleSave" text="Save" />
              <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Save as" />
                  <MenuItem mnemonicParsing="false" onAction="#handleLoad" text="Load" />
                  <MenuItem mnemonicParsing="false" onAction="#handleGenerate" text="Generate" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
